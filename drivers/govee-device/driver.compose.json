{
  "id": "govee-device",
  "name": {
    "en": "Light"
  },
  "class": "light",
  "platforms": ["local","cloud"],
  "connectivity": [ "cloud" ],
  "capabilities": ["alarm_online.light", "onoff","dim","light_saturation","light_hue","light_temperature","light_mode","lightScenes.light","lightDiyScenes.light","snapshots.light","musicMode.light","dreamViewToggle.light","segmentControlColor.light","segmentControlBrightness.light"],
  "images": {
    "small": "/drivers/govee-device/assets/images/small.png",
    "large": "/drivers/govee-device/assets/images/large.png",
    "xlarge": "/drivers/govee-device/assets/images/xlarge.png"
  },
  "pair": [
    {
      "id": "api_settings"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": false
      },
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}