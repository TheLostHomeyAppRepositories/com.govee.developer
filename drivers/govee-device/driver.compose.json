{
  "id": "govee-device",
  "name": {
    "en": "Cloud API Devices"
  },
  "class": "light",
  "platforms": ["local"],
  "capabilities": ["onoff","dim","light_saturation","light_hue","light_temperature","light_mode","lightScenes","lightDiyScenes","snapshots","musicMode","dreamViewToggle"],
  "images": {
    "small": "/drivers/govee-device/assets/images/small.png",
    "large": "/drivers/govee-device/assets/images/large.png",
    "xlarge": "/drivers/govee-device/assets/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": false
      },
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}