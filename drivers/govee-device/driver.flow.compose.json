{
  "triggers": [
    {
      "deprecated": true,
      "id": "alarm_online.light_false",
      "title": {
        "en": "The light is online"
      },
      "hint": {
        "en": "When the light is reported online"
      },
      "$filter": "capabilities=alarm_online.light"
    },
    {
      "deprecated": true,
      "id": "alarm_online.light_true",
      "title": {
        "en": "The light is offline"
      },
      "hint": {
        "en": "When the light is reported to be offline"
      },
      "$filter": "capabilities=alarm_online.light"
    }
  ],
  "conditions": [
    {
      "id": "lightDiyscene-active.light",
      "title": {
        "en": "A specific DIY scene is active"
      },
      "titleFormatted": {
        "en": "The DIY scene [[diyScene]] !{{Is|Isn't}} active"
      },
      "hint": {
        "en": "Current active DIY scene"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "diyScene",
          "title": {
            "en": "DIY scene"
          },
          "placeholder": {
            "en": "DIY scene"
          }
        }
      ],
      "$filter": "capabilities=lightDiyScenes.light"
    },
    {
      "id": "lightscene-active.light",
      "title": {
        "en": "A specific light scene is active"
      },
      "titleFormatted": {
        "en": "The light scene [[lightScene]] !{{Is|Isn't}} active"
      },
      "hint": {
        "en": "Current active light scene"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "lightScene",
          "title": {
            "en": "Light scene"
          },
          "placeholder": {
            "en": "Light scene"
          }
        }
      ],
      "$filter": "capabilities=lightScenes.light"
    },
    {
      "id": "nightlightscene-active.light",
      "title": {
        "en": "A specific nightlight scene is active"
      },
      "titleFormatted": {
        "en": "The nightlight scene [[nightlightScene]] !{{Is|Isn't}} active"
      },
      "hint": {
        "en": "Current active nightlight scene"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "nightlightScene",
          "title": {
            "en": "Nightlight scene"
          },
          "placeholder": {
            "en": "Nightlight scene"
          }
        }
      ],
      "$filter": "capabilities=nightlightScenes.light"
    }
  ],
  "actions": [
    {
      "id":"activate-dreamview.light",
      "title": {
        "en": "Toggle the dream view mode"
      },
      "titleFormatted": {
        "en": "Activate the dreamview mode [[activate]]"
      },
      "titleTrue": {
        "en": "Activate dream view mode"
      },
      "titleFalse": {
        "en": "Deactivate dream view mode"
      },
      "insightsTitleTrue": {
        "en": "Dream view mode was activated"
      },
      "insightsTitleTFalse": {
        "en": "Dream view mode was deactivated"
      },      
      "hint": {
        "en": "Activates or deactivates the dream view mode that is supported by the light (music or video)"
      },
      "$filter": "capabilities=dreamViewToggle.light",
      "args": [
        {
          "type": "checkbox",
          "name": "activate",
          "title": {
            "en": "Activate"
          },
          "placeholder": {
            "en": "Activate"
          }
        }
      ]
    },
    {
      "id": "activate-music-mode.light",
      "title": {
        "en": "Activate music mode"
      },
      "hint": {
        "en": "Activates the music mode in the specified mode and sensitivity"
      },
      "titleFormatted": {
        "en": "Activate music mode [[musicMode]] with sensitivity [[sensitivity]]"
      },
      "$filter": "capabilities=musicMode.light",
      "args": [
        {
          "type": "autocomplete",
          "name": "musicMode",
          "title": {
            "en": "Music mode"
          },
          "placeholder": {
            "en": "Music mode"
          }
        },
        {
          "type": "range",
          "name": "sensitivity",
          "title": {
            "en": "Sensituvity"
          },
          "placeholder": {
            "en": "Sensitivity"
          },
          "labelDecimals": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "label": "%",
          "labelMultiplier": 1
        }
      ]
    },
    {
      "id": "activate-snapshot.light",
      "title": {
          "en": "Activate snapshot"
      },
      "hint": {
          "en": "Activates a previously created snapshot for yor light configuration"
      },
      "titleFormatted": {
          "en": "Activate snapshot [[snapshot]]"
      },
      "$filter": "capabilities=snapshots.light",
      "args": [
          {
              "type": "autocomplete",
              "name": "snapshot",
              "title": {
              "en": "Snapshot"
              },
              "placeholder": {
              "en": "game setup"
              }
          }
      ]
    },
    {
      "id":"set-segment-brightness.light",
      "title": {
        "en": "Control the brightness of a segment of the light"
      },
      "hint": {
        "en": "Use the dropdown to set a specific segment to one color, or use the Segment List input to list one or multiple segments to set to a specific brightness"
      },
      "titleFormatted": {
        "en": "Set [[segmentNr]] or segments [[segmentArray]] to brightness [[segmentBrightness]]"
      },
      "$filter": "capabilities=segmentControlBrightness.light",
      "args": [
        {
          "type": "autocomplete",
          "name": "segmentNr",
          "title": {
            "en": "Segment"
          },
          "required": false,
          "placeholder": {
            "en": "Segment"
          }
        },
        {
          "type": "text",
          "name": "segmentArray",
          "title": {
            "en": "Segment list"
          },
          "required": false,
          "placeholder": {
            "en": "1,3,5,..."
          }
        },
        {
          "type": "range",
          "name": "segmentBrightness",
          "title": {
            "en": "Segment brightness"
          },
          "labelDecimals": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "label": "%",
          "labelMultiplier": 1,
          "placeholder": {
            "en": "Brightness"
          }
        }
      ]
    },
    {
      "id":"set-segment-color.light",
      "title": {
        "en": "Control the color of a segment of the light"
      },
      "hint": {
        "en": "Use the dropdown to set a specific segment to one color, or use the Segment List input to list one or multiple segments to set to a specific color."
      },
      "titleFormatted": {
        "en": "Set [[segmentNr]] or segments [[segmentArray]] to color [[segmentColor]]"
      },
      "$filter": "capabilities=segmentControlColor.light",
      "args": [
        {
          "type": "color",
          "name": "segmentColor",
          "title": {
            "en": "Segment color"
          },
          "placeholder": {
            "en": "Red"
          }
        },
        {
          "type": "text",
          "name": "segmentArray",
          "title": {
            "en": "Segment list"
          },
          "required": false,
          "placeholder": {
            "en": "1,3,5,..."
          }
        },
        {
          "type": "autocomplete",
          "name": "segmentNr",
          "title": {
            "en": "Segment"
          },
          "required": false,
          "placeholder": {
            "en": "Segment"
          }
        }
      ]
    },
    {
      "id": "switch-to-diy-light-scene.light",
      "title": {
        "en": "Switch to diy scene"
      },
      "hint": {
        "en": "Switches to the selected DIY scene (and turns on the light if off)"
      },
      "titleFormatted": {
        "en": "Switch to DIY scene [[diyScene]]"
      },
      "$filter": "capabilities=lightDiyScenes.light",
      "args": [
        {
          "type": "autocomplete",
          "name": "diyScene",
          "title": {
            "en": "DIY Scene"
          },
          "placeholder": {
            "en": "Valantine special"
          }
        }
      ]
    },
    {
      "id": "switch-to-random-diy-light-scene.light",
      "title": {
        "en": "Switch to random diy scene"
      },
      "hint": {
        "en": "Switches to a random diy scene (and turns on the light if off)"
      },
      "titleFormatted": {
        "en": "Switch to random diy scene"
      },
      "$filter": "capabilities=lightDiyScenes.light"
    },
    {
      "id": "switch-to-light-scene.light",
      "title": {
        "en": "Switch to light scene"
      },
      "hint": {
        "en": "Switches to the selected light scene (and turns on the light if off)"
      },
      "titleFormatted": {
        "en": "Switch to light scene [[lightScene]]"
      },
      "$filter": "capabilities=lightScenes.light",
      "args": [
        {
          "type": "autocomplete",
          "name": "lightScene",
          "title": {
            "en": "Scene"
          },
          "placeholder": {
            "en": "Sunset glow"
          }
        }
      ]
    },
    {
      "id": "switch-to-random-light-scene.light",
      "title": {
        "en": "Switch to random light scene"
      },
      "hint": {
        "en": "Switches to a random light scene (and turns on the light if off)"
      },
      "titleFormatted": {
        "en": "Switch to random light scene"
      },
      "$filter": "capabilities=lightScenes.light"
    }
  ]
}