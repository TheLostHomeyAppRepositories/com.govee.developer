{
  "actions": [
    {
      "id": "switch-to-light-scene",
      "title": {
        "en": "Switch to light scene"
      },
      "hint": {
        "en": "Switches to the selected light scene (and turns on the device if off)"
      },
      "titleFormatted": {
        "en": "Switch to light scene [[lightScene]]"
      },
      "$filter": "capabilities=lightScenes",
      "args": [
        {
          "type": "autocomplete",
          "name": "lightScene",
          "placeholder": {
            "en": "Sunset glow"
          }
        }
      ]
    },
    {
      "id": "switch-to-diy-light-scene",
      "title": {
        "en": "Switch to diy scene"
      },
      "hint": {
        "en": "Switches to the selected DIY scene (and turns on the device if off)"
      },
      "titleFormatted": {
        "en": "Switch to DIY scene [[diyScene]]"
      },
      "$filter": "capabilities=lightDiyScenes",
      "args": [
        {
          "type": "autocomplete",
          "name": "diyScene",
          "placeholder": {
            "en": "Valantine special"
          }
        }
      ]
    },
    {
      "id": "activate-snapshot",
      "title": {
        "en": "Activate snapshot"
      },
      "hint": {
        "en": "Activates a previously created snapshot for yor device configuration"
      },
      "titleFormatted": {
        "en": "Activate snapshot [[snapshot]]"
      },
      "$filter": "capabilities=snapshots",
      "args": [
        {
          "type": "autocomplete",
          "name": "snapshot",
          "placeholder": {
            "en": "game setup"
          }
        }
      ]
    },
    {
      "id": "activate-music-mode",
      "title": {
        "en": "Activate music mode"
      },
      "hint": {
        "en": "Activates the music mode in the specified mode and sensitivity"
      },
      "titleFormatted": {
        "en": "Activate music mode [[musicMode]] with sensitivity [[sensitivity]]%"
      },
      "$filter": "capabilities=musicMode",
      "args": [
        {
          "type": "autocomplete",
          "name": "musicMode",
          "placeholder": {
            "en": "Music mode"
          }
        },
        {
          "type": "range",
          "name": "sensitivity",
          "placeholder": {
            "en": "Sensitivity"
          },
          "labelDecimals": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "label": "%",
          "labelMultiplier": 1
        }
      ]
    },
    {
      "id": "activate-dreamview",
      "title": {
        "en": "Toggle the dream view mode"
      },
      "titleTrue": {
        "en": "Activate dream view mode"
      },
      "titleFalse": {
        "en": "Deactivate dream view mode"
      },
      "insightsTitleTrue": {
        "en": "Dream view mode was activated"
      },
      "insightsTitleTFalse": {
        "en": "Dream view mode was deactivated"
      },      
      "hint": {
        "en": "Activates or deactivates the dream view mode that is supported by the device (music or video)"
      },
      "$filter": "capabilities=dreamViewToggle",
      "args": [
        {
          "type": "checkbox",
          "name": "activate",
          "placeholder": {
            "en": "Activate"
          }
        }
      ]
    }
    
  ]
}